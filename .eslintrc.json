{
  "root": true,
  "extends": [
    "airbnb-base",
    // "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "max-len": ["warn", 120]
  },
  "overrides": [{
    "files": ["*.test.js"],
    "env": {
      "mocha": true
    },
    "globals": {
      "expect": "readonly"
    }
  }]
}
